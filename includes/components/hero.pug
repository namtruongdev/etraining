section(id="carousel--hero" class="carousel slide bg-hero-cl" data-ride="carousel")
  div(class="carousel-inner mx-auto")
    div(class="carousel-item active")
      picture
        source(type="image/webp" media="(min-width: 576px)" data-srcset="assets/img/carousel-1-md.webp")
        source(type="image/webp" data-srcset="assets/img/carousel-1.webp")
        source(type="image/png" media="(min-width: 576px)" data-srcset="assets/img/carousel-1-md.png")
        source(type="image/png" data-srcset="assets/img/carousel-1.png")
        img(class="w-75 mx-auto d-block lazyload" data-src="assets/img/carousel-1.png" alt="Hero image 1")
    div(class="carousel-item")
      picture
        source(type="image/webp" media="(min-width: 576px)" data-srcset="assets/img/carousel-2-md.webp")
        source(type="image/webp" data-src="assets/img/carousel-2.webp")
        source(type="image/png" media="(min-width: 576px)" data-srcset="assets/img/carousel-2-md.png")
        source(type="image/png" data-src="assets/img/carousel-2.png")
        img(class="w-75 mx-auto d-block lazyload" data-src="assets/img/carousel-2.png" alt="Hero image 2")
    div(class="carousel-item")
      picture
        source(type="image/webp" media="(min-width: 576px)" data-srcset="assets/img/carousel-3-md.png")
        source(type="image/webp" data-src="assets/img/carousel-3.webp")
        source(type="image/png" media="(min-width: 576px)" data-srcset="assets/img/carousel-3-md.png")
        source(type="image/png" data-src="assets/img/carousel-3.png")
        img(class="w-75 mx-auto d-block lazyload" data-src="assets/img/carousel-3.png" alt="Hero image 3")
  a(class="carousel-control-prev" href="#carousel--hero" role="button" data-slide="prev")
    span(class="carousel-control-prev-icon" aria-hidden="true")
    span(class="sr-only") Previous
  a(class="carousel-control-next" href="#carousel--hero" role="button" data-slide="next")
    span(class="carousel-control-next-icon" aria-hidden="true")
    span(class="sr-only") Next